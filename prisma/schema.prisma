generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OrderStatus{
  PEDING
  DELIVERED
  CANCELLED
}

model Order {
  id String @id @default(uuid())
  totalAmount Float
  totalItems Int

  status OrderStatus
  paid Boolean @default(false)
  paidAt DateTime?

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}